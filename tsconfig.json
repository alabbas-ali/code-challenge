{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "paths": {
            "@@store/*": [
                "./src/app/store/*"
            ],
            "@@services/*": [
                "./src/app/services/*"
            ],
            "@@model/*": [
                "src/app/model/*"
            ],
            "@@components/*": [
                "./src/app/components/*"
            ],
            "@@pages/*": [
                "src/app/pages/*"
            ],
        },
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": false,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableIvy": true,
    }
}
