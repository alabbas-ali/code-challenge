{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "paths": {
            "@@shared/*": [
                "src/app/shared/*"
            ],
            "@@core/*": [
                "src/app/core/*"
            ],
            "@@store/*": [
                "src/app/store/*"
            ],
        },
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": false,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableIvy": true,
    }
}
